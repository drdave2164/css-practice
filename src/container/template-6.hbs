<header class="header">
	<div>
		{{> logo}}
	</div>
	<nav class="header_nav ">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_description">{{description}}</p>
	</div>
	{{/with}}
	{{#with form}}
	<form class="form">
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
				id="form-input-{{id}}">
			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>


		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>

<div class="updates">
	{{#with updates}}
	<div class="updates_list">
		<h3 class="updates_title">{{title}}</h3>
		{{#each list}}
		<div class="list_item">
			<div class="image">
				<div
					class="list_image {{#if @first}}list_image_first{{else}}list_image_second{{/if}} {{#if @last}}list_image_last{{/if}}">
					32x32</div>
			</div>

			<div class="list_item_content">
				<strong class="list_nickname">{{nickname}}</strong>
				<p class="list_description">{{description}}</p>
			</div>
		</div>
		{{/each}}
		{{#with show_all}}
		<a href="{{url}}" class="show_all_link">{{text}}</a>
		{{/with}}
	</div>
	{{/with}}
</div>

<div class="expirience">
	{{#with expirience}}
	<div class="title_badge">
		<h2 class="expirience_title">{{title}}</h2>
		<div class="expirience_badge">{{badge}}</div>
	</div>
	<div class="expirience_list">
		{{#each list}}
		<div class="list">
			<strong class="list_name">{{name}}</strong>
			<p class="list_details">{{details}}</p>
		</div>
		{{/each}}
	</div>
	{{/with}}
</div>

<footer class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>