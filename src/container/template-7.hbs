<header class="header">
</header>

<main class="hero">
	{{#with hero}}
	<h1 class="hero_title">{{title}}</h1>
	<p class="hero_text">{{description}}</p>
	{{#with button}}
	<a class="hero_button btn" href="{{url}}">{{text}}</a>
	{{/with}}
	{{/with}}
</main>

<div class="about">
	{{#with about}}
	<h3 class="about_title">{{heading}}</h3>
	<p class="about_text">{{info}}</p>
	{{/with}}
</div>

<div class="articles">
	<div class="articles_header">
		<h2 class="articles_title">Our Articles</h2>
		<a href="#" class="articles_button">View All</a>
	</div>
	<div class="articles_content">
		{{#each articles}}
		<div class="articles_card">
			<img class="card_img" src="{{photo}}">
			<strong class="card_title">{{name}}</strong>
			<p class="card_text">{{description}}</p>
			<a href="#" class="card_button">Read All</a>
		</div>
		{{/each}}
	</div>
</div>
<footer class="footer">
</footer>